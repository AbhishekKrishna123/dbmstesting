<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Dashboard</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="./materialize/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </head>

    <style>
        body {
            font-size: 12px;
        }
    </style>


    <body>

<section class="container row" style="margin: 2em; border: 1px solid #000; padding: 3em;">

    <h4 class="center">Placement Report</h4>
    <br>
    <h6><b>Placement Test Details</b></h6>

    <h6>Total number of tests: {{TotalTests}}</h6>

    <table class="bordered">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Tests Conducted</th>
            </tr>
        </thead>

        <tbody>
            {{#each Tests}}
                <tr>
                    <td>{{this.CompanyName}}</td>
                    <td>{{this.Num}}</td>
                </tr>
            {{/each}}
        </tbody>

    </table>

    <br>
    <h6><b>List of students placed</b></h6>

    <h6>Total number of students placed: {{TotalPlaced}}</h6>

    <table class="bordered">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>USN</th>
                <th>Placed In</th>
            </tr>
        </thead>

        <tbody>
            {{#each Students}}
                <tr>
                    <td>{{this.FirstName}} {{this.LastName}}</td>
                    <td>{{this.USN}}</td>
                    <td>{{this.CompanyName}}</td>
                </tr>
            {{/each}}
        </tbody>

    </table>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="./materialize/js/materialize.min.js"></script>

</body>

</html>