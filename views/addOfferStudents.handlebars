    <script>
        function addOffers() {

            //console.log("Called");
            var studentList = "";
            var arr = [];
            var CompanyID;
            $('input[type="checkbox"]').filter(':checked').each(
                function () {
                    studentList += this.id + " ";
                    CompanyID = this.name;
                }
            );

            //arr.push(studentList);

            $.ajax({
                type: "POST",
                url: "/add_offer_students",
                //contentType: "json",
                dataType: "json",
                data: {
                    list: studentList,
                    company: CompanyID
                },
                success: function () {
                    //console.log("AJAX done");
                    window.location = "/dashboard";
                },
                error: function () {
                    console.log(
                        "\n---------------------------\nAJAX Error: Unable to send Student List\n---------------------------\n"
                    );
                }

            });
        }
