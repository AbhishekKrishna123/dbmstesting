    <link rel="stylesheet" href="materialize/css/materialize.min.css">
</head>

<body>

    <nav class="teal">
        <div class="nav-wrapper">
            <a href="/dashboard" class="brand-logo center">Career Portal</a>
            <a href="#" data-activates="mobile-demo" class="button-collapse">
                <i class="material-icons">menu</i>
            </a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li>
                    <a></a>Logged in as Administrator </a>
                </li>
                <li>
                    <a href="/logout">Logout</a>
                </li>
            </ul>
            <ul class="side-nav" id="mobile-demo">
                <li>
                    <a href="/dashboard" class="active">Dashboard</a>
                </li>
                <li>
                    <a href="/logout">Logout</a>
                </li>
            </ul>
            <ul id="nav-mobile" class="left hide-on-med-and-down">
                <li>
                    <a href="/password_change"> Change Password </a>
                </li>
            </ul>
        </div>
    </nav>
    <section class="container">
        <h1>Dashboard</h1>
        <h3>Welcome Admin!</h3>
    </section>

    <section class="container" style="margin-top: 5em">


        <div class="col s12 l6" style="padding-left: 3em;">
            <h4 class="teal-text center"> User Count </h4>
            <br>
            <table class="bordered highlight centered responsive-table">
                <thead>
                    <tr>
                        <th>
                            Role
                        </th>
                        <th>
                            Number of Users
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each Users}}
                    <tr>
                        <td>{{this.ROLE}}</td>
                        <td>{{this.COUNT}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <br><br>

        <div class="row">
            <div class="col s3 offset-s5">
                <a class="waves-effect waves-light btn teal" href="/add_remove_users"> Add/Remove Users </a>
            </div>
        </div>




    </section>



    <br>
    <br>

    <script src="materialize/js/materialize.js"></script>
